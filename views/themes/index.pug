    .pagination
      img(src='../../public/assets/icons/line.png')
      .pages
        if page
          p Page #{page} of 4
        else
          p Page 1 of 4
        nav(aria-label='Page navigation example')
          ul.pagination
            if !page == 1 || val == 1
              li.page-item
                a.page-link.active(href=`/themes`)= 1
            else
              li.page-item
                a.page-link(href=`/themes`)= 1
            each val in [2, 3, 4]
              if page == val
                li.page-item
                  a.page-link.active(href=`/themes?page=${val}`)= val
              else
                li.page-item
                  a.page-link(href=`/themes?page=${val}`)= val

