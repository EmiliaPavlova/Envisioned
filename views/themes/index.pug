extends ../_common/layout

block header
  .header
    include ../_common/nav
  h3.index-title Portfolio Category

block content
  .content.index-page
    p.breadcrumbs Home » Blog » &nbsp;
      span Class aptent taciti sociosqu ad

    .index-container
      .index-article
        each article in model
          h3 #{article.title}
          img.line(src='../../public/assets/icons/line.png')
          p.subtitle Posted by #{article.author} on #{article.datePosted} in #{article.category} | #{article.comments} Comments
          .article-content
            .center-cropped
              if article.photo
                img.article-image(src=`../../public/assets/images/${article.photo}`)
                .shadow
              else
                .empty-image
            .article-text.overflow
              p #{article.text}
          .article-button
            a.article-button(href=`themes/${article._id}`) Read Mode

